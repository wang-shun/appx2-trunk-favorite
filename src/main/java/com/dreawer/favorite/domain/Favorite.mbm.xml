<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dreawer.favorite.domain.Favorite">

    <!-- ================================================================================== -->
    <!-- SQL新增																				-->
    <!-- ================================================================================== -->

    <!-- 保存收藏信息 -->
    <insert id="save" parameterType="Favorite">
        INSERT INTO favi_favorite(id, colr_id, colr_idt_id, cont_id, cont_ctg, cre_tim)
        VALUES(#{id}, #{collector.id}, #{collector.id}, #{content.id}, #{content.category}, #{createTime})
    </insert>

    <!-- ================================================================================== -->
    <!-- SQL删除																				-->
    <!-- ================================================================================== -->

    <!-- ================================================================================== -->
    <!-- SQL更新																				-->
    <!-- ================================================================================== -->

    <!-- 更新收藏信息状态 -->
    <delete id="updateFavorite" parameterType="Favorite">
        UPDATE favi_favorite
        SET updr_id = #{collector.id}, updr_idt_id = #{collector.id}, upd_tim = #{updateTime}
        <if test="status != null">
            ,status = #{status}
        </if>
        <if test="content.category != null">
            ,cont_ctg = #{content.category}
        </if>
        WHERE colr_idt_id = #{collector.id} AND cont_id = #{content.id}
    </delete>

    <!-- ================================================================================== -->
    <!-- SQL查询																				-->
    <!-- ================================================================================== -->

    <!-- 查询指定ID号的收藏信息 -->
    <select id="findFavoriteById" parameterType="String" resultMap="favoriteResultMap">
        SELECT
        <include refid="basicFields"/>
        FROM favi_favorite
        WHERE id = #{id}
    </select>

    <!-- 查询指定收藏者和指定内容所对应的收藏信息 -->
    <select id="findFavoriteByCollector" parameterType="Map" resultMap="favoriteResultMap">
        SELECT
        <include refid="basicFields"/>
        FROM favi_favorite
        WHERE colr_idt_id = #{collector.id}
        AND cont_id = #{content.id}
    </select>

    <!-- 查询指定收藏者的收藏信息 -->
    <select id="findFavorites" parameterType="Map" resultMap="favoriteResultMap">
        SELECT
        <include refid="basicFields"/>
        FROM favi_favorite
        WHERE colr_idt_id = #{collector.id}
        AND status = #{status}
        <if test="startTime != null">
            AND cre_tim &lt; #{startTime}
        </if>
        ORDER BY cre_tim DESC
        <if test="maxResults != null">
            LIMIT #{maxResults}
        </if>
    </select>

    <!-- ================================================================================== -->
    <!-- 公用SQL定义																			-->
    <!-- ================================================================================== -->

    <!-- 基本信息字段 -->
    <sql id="basicFields">
        id, colr_id, colr_idt_id, cont_id, status, cont_ctg, cre_tim
    </sql>

    <!-- ================================================================================== -->
    <!-- 结果集映射																			-->
    <!-- ================================================================================== -->

    <!-- 简化映射 -->
    <resultMap id="favoriteResultMap" type="Favorite">
        <result property="id" column="id"/>
        <result property="collector.id" column="colr_id"/>
        <result property="status" column="status"/>
        <!-- <result property="collector.id" column="colr_idt_id" /> -->
        <result property="content.id" column="cont_id"/>
        <result property="content.category" column="cont_ctg"/>
        <result property="createTime" column="cre_tim"/>
        <result property="updateTime" column="upd_tim"/>
    </resultMap>
</mapper>